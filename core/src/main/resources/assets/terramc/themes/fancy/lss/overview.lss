.container {
  top: 5;
  bottom: 20;
  left: 5;
  right: 5;
  filter: blur(25);
  border-radius: 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
  box-shadow: none;

  .header {
      top: 0;
      left: 0;
      right: 0;
      height: 25;
      border-radius: 15 15 0 0;
      background-color: rgba(85, 255, 85, 0.2);

      .header-text {
        alignment-x: center;
        alignment-y: center;
      }

    }

}

.not-connected-info {
  alignment-x: center;
  top: 40vh;
  text-color: dark_red;
}

.connect-text {
  alignment-x: center;
  top: 45vh;
  text-color: red;
}

.connect-button {
  alignment-x: center;
  top: 50vh;
  width: fit-content;
  padding: 0 5 0 5;
}

.overview-grid {
  top: 50;
  left: 0;
  height: fit-content;
  width: 100%;
  tiles-per-line: 4;
  tile-height: 75;
}

Overview {
  .entryIcon {
    alignment-x: center;
    top: 0;
    height: 20;
    width: 20;
  }
  .entryTitle {
    alignment-x: center;
    top: 30%;
  }
}