.api-error {
  alignment-x: center;
  top: 45vh;
  text-color: red;
}

.api-error-reason {
  alignment-x: center;
  top: 50vh;
}

.container {
  top: 5;
  bottom: 25;
  left: 5;
  right: 5;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";

  .header {
    top: 0;
    left: 0;
    right: 0;
    height: 25;
    background-color: rgba(85, 255, 85, 0.3);

    .header-text {
      alignment-x: center;
      alignment-y: center;
    }

    .update-button {
      right: 5;
      alignment-y: center;
      height: 16;
      width: fit-content;
      padding: 0 5 0 5;
    }

  }

}

Scroll {
   top: 30;
   left: 10;
   right: 5;
   bottom: 10;

   .statistics-grid {
     top: 30;
     left: 0;
     height: fit-content;
     width: 100%;
     tiles-per-line: 5;
     tile-height: 130;
   }

   Scrollbar {
      width: 5;
      height: 100%;
   }
}

Statistics {
  .entryIcon {
      alignment-x: center;
      top: 0;
      height: 35%;
      width: 95%;
    }
    .entryTitle {
      alignment-x: center;
      top: 40%;
    }
}